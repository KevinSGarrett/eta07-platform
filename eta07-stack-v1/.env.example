# === Core configuration ===
ENV=prod
AWS_REGION=us-east-1
# optional cross-region copy (leave blank to disable)
AWS_BACKUP_COPY_REGION=us-west-2

# S3 buckets
BACKUP_S3_BUCKET=eta07-backups-prod
AUDIT_S3_BUCKET=eta07-audit-prod

# Database connection (inside EC2/compose network) 
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eta07_prod
POSTGRES_USER=directus
POSTGRES_PASSWORD=CHANGE_ME_STRONG

# Alert recipients (comma-separated emails)
ALERT_EMAILS=superadmin@eta07data.com,cto@eta07data.com

# Directus
DIRECTUS_URL=https://data.eta07data.com
DIRECTUS_ADMIN_EMAIL=superadmin@eta07data.com
DIRECTUS_ADMIN_PASSWORD=CHANGE_ME_STRONG

# Cloudflare / SSO (placeholders if used later)
CLOUDFLARE_ZONE=eta07data.com
CLOUDFLARE_SUBDOMAIN=data

# Export quotas (defaults; can be overridden in DB role_config)
SALES_TEAM_DAILY_EXPORT_LIMIT=75
SALES_TEAM_LEAD_WEEKLY_EXPORT_LIMIT=500

# Crypto secret used for HMAC signatures on export metadata
EXPORT_HMAC_SECRET=CHANGE_ME_LONG_RANDOM
